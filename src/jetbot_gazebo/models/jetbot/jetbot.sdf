<?xml version="1.0" ?>
<sdf version="1.8">
  <model name='jetbot' canonical_link='base_link'>

    <!-- Hlavné telo robota -->
    <link name='base_link'>
      <pose relative_to='__model__'>0 0 0.025 0 0 0</pose>
      <inertial>
        <mass>1.6</mass>
        <inertia>
          <ixx>0.021</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.021</iyy>
          <iyz>0</iyz>
          <izz>0.042</izz>
        </inertia>
      </inertial>
      <visual name='base_link_visual'>
        <geometry>
          <cylinder>
            <radius>0.1066</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.0 1.0 0.0 1</ambient>
          <diffuse>0.0 1.0 0.0 1</diffuse>
          <specular>0.0 1.0 0.0 1</specular>
        </material>
      </visual>
      <collision name='base_link_collision'>
        <geometry>
          <cylinder>
            <radius>0.1066</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>

      <!-- Sensor pre IMU -->
      <sensor name="imu_sensor" type="imu">
        <update_rate>100</update_rate>
        <always_on>1</always_on>
        <visualize>true</visualize>
        <topic>/imu</topic>
      </sensor>

      <!-- Sensor pre kontaktný senzor -->
      <sensor name="contact_sensor" type="contact">
        <update_rate>100</update_rate>
        <contact>
          <collision>base_link_collision</collision>
          <collision>left_wheel_collision</collision>
          <collision>right_wheel_collision</collision>
        </contact>
      </sensor>
    </link>

    <!-- Ľavé koleso -->
    <link name='left_wheel'>
      <pose relative_to="base_link">0 0.1066 -0.02 1.5707 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.002</izz>
        </inertia>
      </inertial>
      <visual name='left_wheel_visual'>
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.0 0.0 1.0 1</ambient>
          <diffuse>0.0 0.0 1.0 1</diffuse>
          <specular>0.0 0.0 1.0 1</specular>
        </material>
      </visual>
      <collision name='left_wheel_collision'>
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
    </link>
    <joint name='left_wheel_joint' type='revolute'>
      <pose relative_to='left_wheel'/>
      <parent>base_link</parent>
      <child>left_wheel</child>
      <dynamics damping="0.1" friction="0.05"/>
      <axis>
        <xyz expressed_in='__model__'>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <!-- Pravé koleso -->
    <link name='right_wheel'>
      <pose relative_to="base_link">0 -0.1066 -0.02 1.5707 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.002</izz>
        </inertia>
      </inertial>
      <visual name='right_wheel_visual'>
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.0 0.0 1.0 1</ambient>
          <diffuse>0.0 0.0 1.0 1</diffuse>
          <specular>0.0 0.0 1.0 1</specular>
        </material>
      </visual>
      <collision name='right_wheel_collision'>
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
    </link>
    <joint name='right_wheel_joint' type='revolute'>
      <pose relative_to='right_wheel'/>
      <parent>base_link</parent>
      <child>right_wheel</child>
      <dynamics damping="0.1" friction="0.05"/>
      <axis>
        <xyz expressed_in='__model__'>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <!-- Pomocné koleso -->
    <link name='balance_wheel'>
      <pose relative_to="base_link">0.09 0 -0.027 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0005</iyy>
          <iyz>0</iyz>
          <izz>0.0005</izz>
        </inertia>
      </inertial>
      <visual name='balance_wheel_visual'>
        <geometry>
          <sphere>
            <radius>0.015</radius>
          </sphere>
        </geometry>
          <material>
            <ambient>0 0 0 1</ambient>
            <diffuse>0 0 0 1</diffuse>
            <specular>0 0 0 1</specular>
          </material>
      </visual>
      <collision name='balance_wheel_collision'>
        <geometry>
          <sphere>
            <radius>0.015</radius>
          </sphere>
        </geometry>
      </collision>
    </link>
    <joint name='balance_joint' type='revolute'>
      <parent>base_link</parent>
      <child>balance_wheel</child>
      <dynamics damping="0.1" friction="0.05"/>
      <axis>
        <xyz expressed_in='__model__'>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <!-- Pomocné koleso_2 -->
    <link name='balance_wheel_2'>
      <pose relative_to="base_link">-0.09 0 -0.027 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0005</iyy>
          <iyz>0</iyz>
          <izz>0.0005</izz>
        </inertia>
      </inertial>
      <visual name='balance_wheel_2_visual'>
        <geometry>
          <sphere>
            <radius>0.015</radius>
          </sphere>
        </geometry>
          <material>
            <ambient>0 0 0 1</ambient>
            <diffuse>0 0 0 1</diffuse>
            <specular>0 0 0 1</specular>
          </material>
      </visual>
      <collision name='balance_wheel_2_collision'>
        <geometry>
          <sphere>
            <radius>0.015</radius>
          </sphere>
        </geometry>
      </collision>
    </link>
    <joint name='balance_joint_2' type='revolute'>
      <parent>base_link</parent>
      <child>balance_wheel_2</child>
      <dynamics damping="0.1" friction="0.05"/>
      <axis>
        <xyz expressed_in='__model__'>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <!-- Kamera -->
    <link name="camera">
      <pose relative_to="base_link">0.1 0 0.03 0 0 0</pose>
      <visual name='camera_visual'>
        <geometry>
          <box>
            <size>0.03 0.03 0.03</size>
          </box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0 0 0 1</specular>
        </material>
      </visual>
      <collision name='camera_collision'>
        <geometry>
          <box>
            <size>0.03 0.03 0.03</size>
          </box>
        </geometry>
      </collision>
      <sensor name="sim_camera" type="camera">
        <topic>image</topic>
        <gz_frame_id>camera</gz_frame_id>
        <update_rate>30</update_rate>
        <camera>
          <horizontal_fov>1.39626</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
      </sensor>
    </link>
    <joint name='camera_joint' type='fixed'>
      <parent>base_link</parent>
      <child>camera</child>
    </joint>

    <!-- Podstavec pre LIDAR -->
    <link name='lidar_base'>
      <pose relative_to="base_link">0 0 0.025 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.002</izz>
        </inertia>
      </inertial>
      <visual name='lidar_base_visual'>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.035</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
          <specular>0 1 0 1</specular>
        </material>
      </visual>
      <collision name='lidar_base_collision'>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.035</length>
          </cylinder>
        </geometry>
      </collision>
    </link>
    <joint name='lidar_base_joint' type='fixed'>
      <parent>base_link</parent>
      <child>lidar_base</child>
    </joint>

    <!-- LIDAR -->
    <link name='lidar'>
      <pose relative_to="lidar_base">0 0 0.025 0 0 0</pose>
      <visual name='lidar_visual'>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0 0 0 1</specular>
        </material>
      </visual>
      <collision name='lidar_collision'>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
      <sensor name="lidar_sensor" type="gpu_lidar">
        <topic>scan</topic>
        <gz_frame_id>lidar</gz_frame_id>
        <update_rate>10</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>640</samples>
              <resolution>1</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
            <vertical>
              <samples>1</samples>
              <resolution>0.01</resolution>
              <min_angle>0</min_angle>
              <max_angle>0</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.08</min>
            <max>10.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
        <always_on>1</always_on>
        <visualize>true</visualize>
      </sensor>
    </link>
    <joint name='lidar_joint' type='fixed'>
      <parent>lidar_base</parent>
      <child>lidar</child>
    </joint>

    <!-- Diferenciálny pohon -->
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.21325</wheel_separation>
      <wheel_radius>0.033</wheel_radius>
      <odom_topic>odom</odom_topic>
      <odom_publish_frequency>10</odom_publish_frequency>
      <topic>cmd_vel</topic>
      <cmd_timeout>0.5</cmd_timeout>
      <tf_topic>tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      <publish_tf>true</publish_tf>
    </plugin>

    <!-- JointStatePublisher plugin -->
    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>joint_states</topic>
      <joint_name>left_wheel_joint</joint_name>
      <joint_name>right_wheel_joint</joint_name>
      <joint_name>balance_joint</joint_name>
      <joint_name>balance_joint_2</joint_name>
    </plugin>

  </model>
</sdf>
